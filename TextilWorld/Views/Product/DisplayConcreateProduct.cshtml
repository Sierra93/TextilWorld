
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Подробнее о товаре</title>
	<link href="~/css/HeaderStyles.css" rel="stylesheet" />
	<link href="~/css/MainStyles.css" rel="stylesheet" />
	<link href="~/css/FooterStyles.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<!-- Подключение фреймворка Vue -->
	<script src="https://unpkg.com/vue"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body>
	<!-- Выгрузка категорий товаров. -->
	<div id="idPortfolioDop" class="col-lg-12 col-xs-12">
		<div class="content">
			@model IEnumerable<TextilWorld.Models.CategoryDetails>
			@foreach (var item in Model) {
				<div class="col-lg-12 block-title-category mt-2 mb-2">
					<h1 class="title-category">@item.Details</h1>
				</div>

				<div id="idImagesNotEffect" class="col-lg-3 col-xs-12">
					<div>
						<img src="@Url.Content(item.ImagePath.Replace("wwwroot", "~"))" /> <br />
					</div>
				</div>
			}
		</div>
		@*<form asp-action="AddProductToShop" asp-controller="Product" class="form-product col-lg-3">
			<div class="form-group form-product-shop">
				<input id="id-details" type="submit" value="Продолжить покупки" class="mr-5 continue idBtnDetailsProduct btn fancy btn-1 btn-sm btn-details text-center btn-product" />

				<input id="id-details" type="submit" value="Оформить заказ" class="mr-5 idBtnDetailsProduct btn fancy btn-1 btn-sm btn-details text-center btn-product" />
			</div>
		</form>*@
	</div>
</body>
</html>

